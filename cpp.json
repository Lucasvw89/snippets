    "dsu" :{
        "prefix": "DSU",
        "body": [
            "struct DSU {",
            "    int n;",
            "    vector<int> p, sz;",
            "",
            "    DSU(int n) : n(n), p(n), sz(n, 1) {",
            "        iota(p.begin(), p.end(), 0);",
            "    }",
            "",
            "    int find(int x) {",
            "        if (x == p[x]) return x;",
            "        return x = find(p[x]);",
            "    }",
            "",
            "    bool unite(int a, int b) {",
            "        a = find(a);",
            "        b = find(b);",
            "        if (a == b) return false;",
            "        if (sz[a] < sz[b]) swap(a, b);",
            "        p[b] = a;",
            "        sz[a] += sz[b];",
            "        return true;",
            "    }",
            "};"
        ],
        "description": "dsu impl"
    },
